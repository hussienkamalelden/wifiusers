<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0b32">
    <RelativeLayout
        android:id="@+id/title_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:rotation="-3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_container_2">
        <TextView
            android:id="@+id/title_bg_txt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Router Information"
            android:textSize="35sp"
            android:textColor="#ffcf6b"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/title_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_container">
        <TextView
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Router Information"
            android:textSize="35sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/title_box"
        android:layout_marginBottom="120dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/RelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ssid_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="SSID"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/ssid_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_below="@+id/ssid_title"
                    android:text="SSID"
                    android:layout_centerHorizontal="true"
                    android:textColor="#25b7e5"/>
                <TextView
                    android:id="@+id/ip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="Default Gateway"
                    android:layout_below="@+id/ssid_name"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/ip_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_below="@+id/ip_title"
                    android:text="IP"
                    android:layout_centerHorizontal="true"
                    android:textColor="#25b7e5"/>
                <TextView
                    android:id="@+id/mac_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ip_number"
                    android:textSize="30sp"
                    android:text="MAC Address"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/mac_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_below="@+id/mac_title"
                    android:text="MAC"
                    android:layout_centerHorizontal="true"
                    android:textColor="#25b7e5"/>
                <TextView
                    android:id="@+id/dns_1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mac_number"
                    android:textSize="30sp"
                    android:text="DNS 1"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/dns_1_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/dns_1_title"
                    android:text="DNS 1"
                    android:textColor="#25b7e5"/>
                <TextView
                    android:id="@+id/dns_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dns_1_number"
                    android:textSize="30sp"
                    android:text="DNS 2"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/dns_2_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/dns_2_title"
                    android:text="DNS 2"
                    android:textColor="#25b7e5"/>
                <TextView
                    android:id="@+id/lease_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dns_2_number"
                    android:textSize="30sp"
                    android:text="Lease Time"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/lease_time_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/lease_time_title"
                    android:text="Lease Time"
                    android:textColor="#25b7e5"/>
                <TextView
                    android:id="@+id/subnet_mask_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lease_time_number"
                    android:textSize="30sp"
                    android:text="Subnet Mask"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/subnet_mask_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/subnet_mask_title"
                    android:text="Subnet Mask"
                    android:textColor="#25b7e5"/>
                <TextView
                    android:id="@+id/server_ip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subnet_mask_number"
                    android:textSize="30sp"
                    android:text="Server IP"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/server_ip_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/server_ip_title"
                    android:text="Server IP"
                    android:textColor="#25b7e5"/>
                <TextView
                    android:id="@+id/signal_strength_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/server_ip_number"
                    android:textSize="30sp"
                    android:text="Signal Strength"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffcf6b"/>
                <TextView
                    android:id="@+id/signal_strength_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/signal_strength_title"
                    android:text="Signal Strength"
                    android:textColor="#25b7e5"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adUnitId="@string/admob_2"/>
</RelativeLayout>
